{
    "name": "backend",
    "version": "1.0.0",
    "main": "./dist/server.js",
    "scripts": {
        "dev:old": "nodemon src/**/*.ts",
        "dev": "concurrently \"npm run build:watch\" \"nodemon\"",
        "start": "node dist/server.js",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "prettier src/**/*.ts --write",
        "format": "prettier . --write"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "devDependencies": {
        "@eslint/js": "^9.10.0",
        "@types/eslint__js": "^8.42.3",
        "@types/express": "^4.17.21",
        "@types/node": "^22.5.5",
        "@types/pg": "^8.11.10",
        "concurrently": "^9.0.1",
        "eslint": "^9.10.0",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "nodemon": "^3.1.4",
        "pg": "^8.13.0",
        "prettier": "^3.3.3",
        "sequelize": "^6.37.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8.5.0"
    },
    "dependencies": {
        "body-parser": "^1.20.3",
        "ejs": "^3.1.10",
        "express": "^4.21.0"
    },
    "hooks": {
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "git add"
        ]
    }
}
